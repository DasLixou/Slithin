    <DataTemplate DataType="{x:Type menu:ContextualButton}">
        <controls:ImageButton MinHeight="60" Classes="Flat" Text="{Binding Title}" Command="{Binding Command}" CommandParameter="{Binding CommandParameter}" Image="{Binding Icon}" />
