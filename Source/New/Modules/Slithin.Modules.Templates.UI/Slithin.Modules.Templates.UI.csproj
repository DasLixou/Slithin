<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <AvaloniaXaml Remove="Icons.axaml" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Resources\Icons.xml" />
  </ItemGroup>

  <ItemGroup>
    <AvaloniaResource Include="Resources\Icons.xml" />
  </ItemGroup>

  <ItemGroup>
    <AvaloniaXaml Include="Resources\Icons.xml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AuroraModularis" Version="1.0.18" />
    <PackageReference Include="Avalonia" Version="0.10.18" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Slithin.Controls\Slithin.Controls.csproj" />
    <ProjectReference Include="..\..\Models\Slithin.Modules.Menu.Models\Slithin.Modules.Menu.Models.csproj" />
    <ProjectReference Include="..\..\Models\Slithin.Modules.Repository.Models\Slithin.Modules.Repository.Models.csproj" />
    <ProjectReference Include="..\..\Models\Slithin.Modules.Sync.Models\Slithin.Modules.Sync.Models.csproj" />
    <ProjectReference Include="..\..\Slithin.Entities\Slithin.Entities.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="TemplatesContextualMenu.axaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <Compile Update="TemplatesPage.axaml.cs">
      <SubType>Code</SubType>
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="TemplatesPage.axaml">
      <SubType>Designer</SubType>
    </None>
  </ItemGroup>

</Project>
