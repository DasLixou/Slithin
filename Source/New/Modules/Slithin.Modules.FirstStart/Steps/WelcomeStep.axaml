<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:l="using:Slithin.Core"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Slithin.Modules.FirstStart.Steps.WelcomeStep">
    <Grid MinWidth="400" MinHeight="400">
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Classes="card">
            <StackPanel Spacing="25" Margin="15">
                <TextBlock Classes="cardHeader" Text="{l:Localisation 'Welcome'}" />

                <TextBlock TextWrapping="Wrap" Text="{l:Localisation 'Thanks for deciding using Slithin. This little wizard helps you to configure Slithin for your needs. Go to the next step to start configuring.'}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>