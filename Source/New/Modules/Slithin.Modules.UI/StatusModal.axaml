<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:progRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
             xmlns:c="using:Slithin.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Slithin.Modules.UI.StatusModal">
    <Border BorderBrush="Black" BorderThickness="1" Margin="3" MaxHeight="150" MinHeight="150" MinWidth="350" MaxWidth="350" Background="White">
        <StackPanel Orientation="Horizontal" Margin="10">
            <progRing:ProgressRing Width="40"
                               Height="40"
                               IsActive="True"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Foreground="Black" Margin="0,0,10,0" />

            <TextBlock Text="{Binding Message}" FontSize="15" TextWrapping="Wrap" Width="250" MaxWidth="250"
                       HorizontalAlignment="Stretch" VerticalAlignment="Center" />
        </StackPanel>
    </Border>
</UserControl>