<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Slithin.Controls">
    <Design.PreviewWith>
        <controls:KryptoDonateControl />
    </Design.PreviewWith>

    <Style Selector="controls|KryptoDonateControl">
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel Orientation="Horizontal" Spacing="15" Margin="2">
                    <Image Source="{TemplateBinding Image}" Width="32" Height="32" ToolTip.Tip="{TemplateBinding CoinName}" />
                    <TextBlock Text="{TemplateBinding Address}" VerticalAlignment="Center" Width="315" ToolTip.Tip="{TemplateBinding CoinName}" />
                    <Button Classes="Flat" Command="{TemplateBinding CopyAddressCommand}" ToolTip.Tip="Copy to Clipboard">
                        <Image Source="/Resources/copy.png" Width="32" Height="32" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </Button>
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>