<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://github.com/furesoft/Slithin">
    <Design.PreviewWith>
        <controls:SettingsGroup />
    </Design.PreviewWith>

    <Style Selector="controls|SettingsGroup">
        <Setter Property="Margin" Value="0,0,0,10" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid>
                    <Expander Margin="5" Header="{TemplateBinding Header}" IsExpanded="{TemplateBinding Tag}">
                        <ContentPresenter Content="{TemplateBinding Content}" Margin="2,1,1,1" />
                    </Expander>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>